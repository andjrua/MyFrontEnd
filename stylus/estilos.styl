@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
gris_fondo = #F0F0F0
rojo = red


a
    text-decoration none
body 
    font-size 16px
    font-family 'Noto Sans', sans-serif
figure
    margin 0
ul 
    margin 0 
    padding 0
.button-menu
    position absolute
    top 50%
    margin-top -10px
    left 0.5rem
    color gris_oscuro
.center-block
    margin 0 auto
.center-text
    text-align center
.container
    padding 1.4rem
    font-size 0
    text-align center
.name
    color gris_oscuro
.menu
    display none
.author
    color gris_claro
.wrap
    width 1000px
.reative 
    position relative
.border-bottom
    border-bottom 1px solid gris_claro
.header
    height 3.5rem
    position relative
    .title
        font-size 1.2rem
        text-align center
        margin 0
        line-height 3.5em
.song
    width 8rem
    display inline-block
    font-size 1rem
    margin-right 1rem
    margin-bottom 1rem
    text-align left
    &:nth-child(even)
        margin-right 0
    p 
        margin 0.5rem 0
.playing
    &.small
        width 20rem
.padding-tb
    padding 1rem 0
.action
    color white
    margin-right .5rem
    font-size 1.2rem
    &:last-child
        margin-right 0
    &.gray
        color gris_oscuro
.actions
    position absolute
    background rgba(white,.3)
    bottom 0
    left 0
    right 0
.relative
    position relative
.padding
    padding 1rem
.right-text
    text-align right
.left
    float left
.right 
    float right
.round
    border-radius 50%
    overflow hidden
img 
    vertical-align top
.progress
    margin 1rem 0
    position relative
    .min
    .max
        font .8rem
        top -5px
        position absolute
    .min
        left 0
    .max
        right 0
    .total
        margin 0 auto
        height 5px
        background gris_claro
        border-radius 5px
        width 75%
    .state
        position relative
        height 5px
        background rojo
        border-radius 5px
        width 30%
    .circle
        position absolute
        right 0
        top -2px
        width 10px
        height 10px
        border-radius 50%
        background gris_oscuro
.play
    .action
        font-size 1.7rem
.input
    border 1px  solid gris_claro
    height 2.5em
    border-radius: 7px
    padding 0 1em 0 2em
.search-icon
    position absolute
    left 0.6em
    top  0.8em
    color gris_claro
.close-icon
    position absolute
    right 0.6em
    top  0.5em
    color gris_claro
    font-size 1.1em
    .logo
        display none
.playlist
    display none
    width 22em
    padding 0 2em
    border-left 1px solid gris_claro
    p 
        font-size 20px
        margin 0
    .list
        list-style none
    .ite
        padding 1em 0
        a
            color gris_claro
            font-size 14px
    .actions
        font-size 14px
.isotipo
    width 122px
.logo
    background white 
    display none
    padding 1.3em 0
    overflow hidden
.avatar
    width 38px
    height 38px
    margin-left 0.5em
.username
    color gris_claro
    position relative
    top 9px
    margin-left 0.5em
    &:after
        content ""
        border-top 9px solid gris_claro
        border-left 7px solid transparent
        border-right 7px solid transparent
        display inline-block
        margin-left 0.4em
@media screen and (min-width 480px)
    .song   
        &:nth-child(even)
            margin-right 1em
    .image
        img
            width 100%
            height auto
    .playing
        &.medium
            margin 0 auto
            width auto
    .logo
        display none

@media screen and (min-width 1000px)
    body 
        background gris_fondo
    .button-menu
        display none
    .playing
        padding-top 1.3em
        &.large
            margin 0 auto
            width 62.5em
            overflow hidden
    .menu
        display block
        background gris_fondo
        overflow hidden
        border-top 1px solid gris_claro
        .ite
            float left
            list-style none
            a
                display block
                color gris_oscuro
                font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
                text-transform uppercase
                cursor pointer
                padding 1em
                border-top 5px solid transparent
                &:hover
                    border-top 5px solid gris_claro
    .music
        width 32.5em
        float left
        .description
            display none
    .header
        height auto
        border none
        .title
            display none
    .logo
    .playlist
        display block